<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Citas Médicas Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-notes-medical me-2"></i> Citas Médicas Online
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            @* Ajuste para que "Inicio" solo esté activo para Home/Index *@
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Inicio
                            </a>
                        </li>

                        @* Solo mostrar si el usuario está autenticado *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            @* Agendar Cita: Requiere permiso para gestionar citas *@
                            @if (User.HasClaim("Permission", "can_access_appointments_section"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="AppointmentUI" asp-action="Index">
                                        <i class="fas fa-calendar-plus me-1"></i> Agendar Cita
                                    </a>
                                </li>
                            }

                            @* Gestión Doctores: Requiere permiso para gestionar doctores *@
                            @if (User.HasClaim("Permission", "can_manage_doctors"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="DoctorUI" asp-action="Index">
                                        <i class="fas fa-user-md me-1"></i> Gestión Doctores
                                    </a>
                                </li>
                            }

                            @* Gestión Instituciones: Requiere permiso para gestionar instituciones *@
                            @if (User.HasClaim("Permission", "can_manage_institutions"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="InstitutionUI" asp-action="Index">
                                        <i class="fas fa-hospital me-1"></i> Gestión Instituciones
                                    </a>
                                </li>
                            }

                            @* Gestión Especialidades: Requiere permiso para gestionar especialidades *@
                            @if (User.HasClaim("Permission", "can_manage_specialties"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="SpecialtyUI" asp-action="Index">
                                        <i class="fas fa-stethoscope me-1"></i> Gestión Especialidades
                                    </a>
                                </li>
                            }

                            @* Gestión Pacientes: Requiere permiso para gestionar pacientes *@
                            @if (User.HasClaim("Permission", "can_manage_patients"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="PatientUI" asp-action="Index">
                                        <i class="fas fa-procedures me-1"></i> Gestión Pacientes
                                    </a>
                                </li>
                            }

                            @* Gestión Usuarios: Requiere permiso para gestionar usuarios *@
                            @if (User.HasClaim("Permission", "can_manage_users"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="UserUI" asp-action="Index">
                                        <i class="fas fa-users-cog me-1"></i> Gestión Usuarios
                                    </a>
                                </li>
                            }

                            @if (User.HasClaim("Permission", "can_manage_roles"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="RoleUI" asp-action="Index">
                                        <i class="fas fa-user-tag me-1"></i> Gestión Roles
                                    </a>
                                </li>
                            }

                            @* Reportes: Requiere permiso para generar reportes *@
                            @if (User.HasClaim("Permission", "can_generate_reports"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="ReportUI" asp-action="Index">
                                        <i class="fas fa-file-alt me-1"></i> Reportes
                                    </a>
                                </li>
                            }

                        } @* Fin if (User.Identity.IsAuthenticated) *@
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownUser">
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <button type="button" id="logoutButton" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-1"></i> Cerrar Sesión
                                        </button>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            @* Mostrar "Iniciar Sesión" si no está autenticado *@
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Iniciar Sesión
                                </a>
                            </li>
                            @* Mostrar "Registrarse" si no está autenticado *@
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i> Registrarse
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* Widget de Chat: Solo si el usuario está autenticado *@
    @if (User.Identity.IsAuthenticated)
    {
        <div id="chat-widget-container" class="chat-closed">
            <div id="chat-header">
                <span id="loggedInUsernameDisplay">Chateando como: Usuario</span>
                <button id="toggleChatBtn" class="btn btn-sm btn-light">
                    <i class="fas fa-chevron-up"></i>
                </button>
            </div>

            <div id="chat-content">
                <div class="input-group mb-3">
                    <input id="messageInput" class="form-control" placeholder="Escribe tu mensaje..." />
                    <button id="sendBtn" class="btn btn-primary">Enviar</button>
                </div>

                <div id="chat" class="border rounded p-3 bg-light" style="height: 300px; overflow-y: auto;"></div>
            </div>
        </div>
    }

    <footer class="footer py-4 bg-dark text-white-50">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5><i class="fas fa-info-circle me-2"></i> Información</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50 text-decoration-none">Acerca de Nosotros</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Preguntas Frecuentes</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none">Política de Privacidad</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Términos del Servicio</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5><i class="fas fa-phone-alt me-2"></i> Contacto</h5>
                    <ul class="list-unstyled">
                        <li>Email: info@citasmedicas.com</li>
                        <li>Teléfono: +503 1234-5678</li>
                        <li>Dirección: Calle Falsa 123, San Salvador</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5><i class="fas fa-share-alt me-2"></i> Síguenos</h5>
                    <a href="#" class="text-white-50 me-3"><i class="fab fa-facebook fa-2x"></i></a>
                    <a href="#" class="text-white-50 me-3"><i class="fab fa-twitter fa-2x"></i></a>
                    <a href="#" class="text-white-50 me-3"><i class="fab fa-instagram fa-2x"></i></a>
                    <a href="#" class="text-white-50"><i class="fab fa-linkedin fa-2x"></i></a>
                </div>
            </div>
            <hr class="bg-secondary">
            <p class="mb-0">&copy; @DateTime.Now.Year - Citas Médicas Online. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>