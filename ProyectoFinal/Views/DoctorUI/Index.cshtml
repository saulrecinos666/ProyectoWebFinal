@{
    ViewData["Title"] = "Gestión de Doctores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-injured me-2"></i>@((ViewBag.DoctorProfileExists == true) ? "Gestión de Doctores" : "Completar Perfil")</h2>
        @if (ViewBag.IsAdminView == true)
        {
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createDoctorModal">
                <i class="fas fa-plus-circle me-1"></i> Nuevo Doctor
            </button>
        }
    </div>

    @if (ViewBag.DoctorProfileExists == true)
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped" id="doctorsTable">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre Completo</th>
                        <th>Usuario</th>
                        <th>DUI</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Especialidad</th>
                        <th>Institución</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div id="new-user-view-container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <div class="card shadow-sm p-4 mt-5">
                        <h2 class="mb-3">¡Bienvenido! Ya casi terminamos</h2>
                        @if (TempData["InfoMessage"] != null)
                        {
                            <div class="alert alert-info">@TempData["InfoMessage"]</div>
                        }
                        <p class="lead text-muted">Para finalizar tu registro y poder usar el sistema, necesitamos que completes tu perfil de doctor. El formulario aparecerá automáticamente.</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="modal fade" id="createDoctorModal" tabindex="-1" aria-labelledby="createDoctorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createDoctorModalLabel">Añadir Nuevo Doctor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="createDoctorForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="createFirstName" class="form-label">Primer Nombre</label>
                                <input type="text" class="form-control" id="createFirstName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="createMiddleName" class="form-label">Segundo Nombre (Opcional)</label>
                                <input type="text" class="form-control" id="createMiddleName">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="createLastName" class="form-label">Primer Apellido</label>
                                <input type="text" class="form-control" id="createLastName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="createSecondLastName" class="form-label">Segundo Apellido (Opcional)</label>
                                <input type="text" class="form-control" id="createSecondLastName">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="createDui" class="form-label">DUI</label>
                                <input type="text" class="form-control" id="createDui" placeholder="Ej. 000000000" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="createEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="createEmail" placeholder="ejemplo@prueba.com" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="createPhone" class="form-label">Teléfono (Opcional)</label>
                                <input type="tel" class="form-control" id="createPhone" placeholder="Ej. 00000000">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="createSpecialtyId" class="form-label">Especialidad</label>
                                <select class="form-select" id="createSpecialtyId" required>
                                    <option value="">Cargando...</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="createInstitutionId" class="form-label">Institución</label>
                                <select class="form-select" id="createInstitutionId" required>
                                    <option value="">Cargando...</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="createUser" class="form-label">Usuario</label>
                                <input type="text" class="form-control" id="createUser">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Guardar Doctor</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editDoctorModal" tabindex="-1" aria-labelledby="editDoctorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editDoctorModalLabel">Editar Doctor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editDoctorForm">
                        <input type="hidden" id="editDoctorId">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editFirstName" class="form-label">Primer Nombre</label>
                                <input type="text" class="form-control" id="editFirstName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editMiddleName" class="form-label">Segundo Nombre (Opcional)</label>
                                <input type="text" class="form-control" id="editMiddleName">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editLastName" class="form-label">Primer Apellido</label>
                                <input type="text" class="form-control" id="editLastName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editSecondLastName" class="form-label">Segundo Apellido (Opcional)</label>
                                <input type="text" class="form-control" id="editSecondLastName">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editDui" class="form-label">DUI</label>
                                <input type="text" class="form-control" id="editDui" placeholder="Ej. 000000000" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="editEmail" placeholder="ejemplo@prueba.com" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editPhone" class="form-label">Teléfono (Opcional)</label>
                                <input type="tel" class="form-control" id="editPhone" placeholder="Ej. 00000000">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editSpecialtyId" class="form-label">Especialidad</label>
                                <select class="form-select" id="editSpecialtyId" required>
                                    <option value="">Cargando...</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editInstitutionId" class="form-label">Institución</label>
                                <select class="form-select" id="editInstitutionId" required>
                                    <option value="">Cargando...</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editUser" class="form-label">Usuario</label>
                                <input type="text" class="form-control" id="editUser" required>                               
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="detailsDoctorModal" tabindex="-1" aria-labelledby="detailsDoctorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsDoctorModalLabel">Detalles del Doctor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>ID:</strong> <span id="detailsDoctorId"></span></p>
                    <p><strong>Nombre Completo:</strong> <span id="detailsFullName"></span></p>
                    <p><strong>DUI:</strong> <span id="detailsDui"></span></p>
                    <p><strong>Email:</strong> <span id="detailsEmail"></span></p>
                    <p><strong>Teléfono:</strong> <span id="detailsPhone"></span></p>
                    <p><strong>Especialidad:</strong> <span id="detailsSpecialty"></span></p>
                    <p><strong>Institución:</strong> <span id="detailsInstitution"></span></p>
                    <p><strong>Estado:</strong> <span id="detailsIsActive"></span></p>
                    <p><strong>Creado Por:</strong> <span id="detailsCreatedBy"></span></p>
                    <p><strong>Creado En:</strong> <span id="detailsCreatedAt"></span></p>
                    <p><strong>Modificado Por:</strong> <span id="detailsModifiedBy"></span></p>
                    <p><strong>Modificado En:</strong> <span id="detailsModifiedAt"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto" id="toastHeader"></strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toastBody">
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/doctors.js" asp-append-version="true"></script>
}